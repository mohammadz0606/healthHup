

<%- include("../partials/dashboard/header.ejs") %>


<!-- partial -->
<div class="container-fluid page-body-wrapper">
  <!-- partial:partials/_sidebar.html -->
  <nav class="sidebar sidebar-offcanvas" id="sidebar">
    <ul class="nav">

      <%-include("../partials/dashboard/navList.ejs") %>
      
    </ul>
  </nav>
  <!-- partial -->
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-md-12 grid-margin">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="font-weight-bold mb-0">Contact Messages</h2>
            
          </div>
        </div>
        <div class="col-12 d-flex align-items-center justify-content-between">
            <p class="lead"><%= contacts.length %> Contact Message Found</p>
            <a href="/dashboard/manage/contacts" class="btn btn-light">
                <svg style="margin-right: 10px;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z"/>
                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466"/>
                  </svg>
                Reload Contacts
            </a>
        </div>
        <div class="col-12 mt-5">
            <div class="row">
                <% contacts.forEach((contact) => { %>
                  <div class="col-4 mx-2 bg-light p-4 mt-3" style="border-radius: 15px;">
                       

                  

                      <p class="mb-0" style="font-weight: bold; text-transform: uppercase;">NAME</p>
                      <p class=" mb-0"><%= contact.name %></p>
                      <br>

                      <p class="mb-0" style="font-weight: bold; text-transform: uppercase;">EMAIL</p>
                      <p class=" mb-0"><%= contact.email %></p>
                      <br>

                      <p class="mb-0" style="font-weight: bold; text-transform: uppercase;">SUBJECT</p>
                      <p class=" mb-0"><%= contact.subject %></p>
                      <br>

                      <p class="mb-0" style="font-weight: bold; text-transform: uppercase;">MESSAGE</p>
                      <p class=" mb-0"><%= contact.message %></p>
                      <br>
                      

                  </div>
                <% }) %>
                    
                    
                   
                   
                
                
                
            </div>
        </div>
     </div>
    </div>
    
      
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->
    
    <!-- partial -->
  
  <!-- main-panel ends -->
</div>



  
<%- include("../partials/dashboard/footer.ejs") %>



